<div id="main">
    <img src="../assets/main-img.jpg">
</div>
<div id="article_wrap">
  <div id="article_list">
    <% @lists.each do |list| %>
      <%= link_to blog_path(list.id) do %>
        <div>
          <h2><%= list.title %></h2>
          <p><%= list.created_at.strftime('%Y/%m/%d') %><p>
          <% if list.user == current_user %>
            <%= link_to "編集", edit_blog_path(list.id) %> <%= link_to "削除", blog_path(list.id), method: :delete %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div id="sidebar">
    <h2>★PV数ランキング</h2>
    <ul>
      <% @rankings.each do |top3_page| %>
        <li><%= link_to List.where(id: top3_page)[0].title, blog_path(List.where(id: top3_page)[0].id) %> (<%= top3_page[1] %>PV) </li>
      <% end %>
    </ul>
  </div>
  <div class="clear"></div>
  </div>
</div>



